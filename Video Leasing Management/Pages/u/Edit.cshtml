@page "{user:minlength(1)}"
@model Video_Leasing_Management.Pages.u.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="UserData.UserName" />
            <div class="form-group">
                <label asp-for="UserData.FirstName" class="control-label"></label>
                <input asp-for="UserData.FirstName" class="form-control" />
                <span asp-validation-for="UserData.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.LastName" class="control-label"></label>
                <input asp-for="UserData.LastName" class="form-control" />
                <span asp-validation-for="UserData.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.DOB" class="control-label"></label>
                <input asp-for="UserData.DOB" class="form-control" />
                <span asp-validation-for="UserData.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.Phone" class="control-label"></label>
                <input asp-for="UserData.Phone" class="form-control" />
                <span asp-validation-for="UserData.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.Email" class="control-label"></label>
                <input asp-for="UserData.Email" class="form-control" />
                <span asp-validation-for="UserData.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.Password" class="control-label"></label>
                <input asp-for="UserData.Password" class="form-control" />
                <span asp-validation-for="UserData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-user="@Model.UserData.UserName">Back</a>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

