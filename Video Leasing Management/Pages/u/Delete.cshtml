@page "{user:minlength(1)}"
@model Video_Leasing_Management.Pages.u.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />

@if (Model.Message != "Successfull")
{
    <div class="alert alert-warning text-black-50" role="alert">
        @Model.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>User @Html.DisplayFor(model => model.UserData.UserName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserData.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserData.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserData.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserData.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserData.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserData.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserData.DOB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserData.DOB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserData.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserData.Email)
        </dd>
    </dl>

    @if (Model.Message == "Successfull")
    {
        <form method="post">
            <button type="submit" value="Delete" class="btn btn-danger">Delete Account</button>
        </form>
    }

    <a class="btn btn-secondary" asp-page="./Index" asp-route-user="@Model.UserData.UserName">Back</a>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
